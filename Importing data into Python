import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
from sklearn.model_selection import train_test_split

dfd = pd.read_excel("Data.xlsx")
dfd

# Splitting the data into 3 parts
train, test, validate = np.split(
    dfd.sample(frac=1, random_state=42), [int(0.4 * len(dfd)), int(0.8 * len(dfd))]
)

X_train = train.iloc[:,1:77]
Y_train = train.iloc[:,0]
X_test = test.iloc[:,1:77]
Y_test = test.iloc[:,0]
X_validate = validate.iloc[:,1:77]
Y_validate = validate.iloc[:,0]
